{
  "name": "@examples/api",
  "description": "Example of interacting with Web Messenger deployment using Vitest, TS and JS",
  "private": true,
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "prettier:check": "prettier --check src/**/*.ts *.md tests/**/*.ts --no-error-on-unmatched-pattern",
    "prettier:fix": "prettier --write src/**/*.ts *.md tests/**/*.ts --ignore-unknown --no-error-on-unmatched-pattern",
    "lint:check": "eslint --cache --ext .ts ./src",
    "lint:fix": "eslint --cache --fix --ext .ts ./src",
    "check": "npm run lint:check && npm run prettier:check",
    "fix": "npm run lint:fix && npm run prettier:fix",
    "test": "vitest __tests__",
    "test:js": "node ../api/src/js-script.js",
    "test:ts": "node -r ts-node/register ../api/src/ts-script.ts"
  },
  "devDependencies": {
    "@makingchatbots/genesys-cloud-chatbot-tester": "2.0.7",
    "@types/node": "^14.14.2",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "dotenv": "^16.3.1",
    "eslint": "latest",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
